.ui.card .content{
  .icon {
    color: #C7CCD1;
    font-size: 3em;
    line-height: 1;
    margin: 0;
  }

  ul {
    padding: 0;

    li {
      list-style-type: none;
    }
  }
}

.ui.card.big {
  width: @widthBig;

 .content {
    .header {
      margin-bottom: 1em;
    }

    .ui.form {
      .ui.field:last-child {
        margin-bottom: 10em;
      }

      .ui.checkbox {
        margin-left: 1em;
      }

      .ui.button.blue {
        margin-top: 1em;
      }
    }
 }
}