/*-------------------
        Input
--------------------*/

@inputFontSize: @defaultInputFontSize;
@inputPadding: @inputVerticalPadding @inputHorizontalPadding;
@inputBorder: @defaultInputBorder;

@inputFocusBackground: @defaultInputFocusBackground;

@labelMargin: @labelMarginTop @labelMarginRight @labelMarginBottom @labelMarginLeft;
@labelFontWeight: @defaultFontWeight;
@labelFontSize: @defaultInputLabelFontSize;

/*-------------------
        Textarea
--------------------*/

@textareaLineHeight: @inputLineHeight;
@textareaHoverBorderColor: @inputHoverBorderColor;
@textareaReadonlyBackground: @inputReadonlyBackground;
@textareaReadonlyBorderColor: @inputReadonlyBorderColor;

// General
@editBackground: #fff;
@flexEditFormPadding: 1px @distanceL;

// Buttons
@flexberryContentPadding: 0;
@headerFontWeight: 400;

// Toolbar buttons
@buttonFontWeight: @defaultMediumFontWeight;
@editButtonsColor: @textColor;
@closeButtonPaddingTop: unit(9 / 14, em);

//Icons
@iconFontFamily: guideline-icons;
@saveIcon: "\f0c7";
@successIcon: "\e92d";
@deleteIcon: "\e911";
@errorIcon: "\e915";
@closeIcon: "\e806";
@iconPadding: 10px;
@iconFontSize: 16px;
@closeButtonFontSize: 40px;

/* Errored Input */
@formErrorColor: @textColor;
@formErrorBorder: @negativeColor;
@formErrorBackground: @editBackground;

/* Focused Error */
@inputErrorFocusBackground: @formErrorBackground;
@inputErrorFocusColor: @formErrorColor;
@inputErrorFocusBorder: @negativeColor;

/* Errored Input label*/
@formErrorLabelBackground: transparent;
@formErrorLabelBorder: none;
@formErrorLabelColor: @negativeColor;
@formErrorLabelFontSize: @inputFontSize;
@formErrorLabelFontWeight: normal;
@formErrorLabelPadding: 0;
@formErrorLabelCornerDisplay: none;
@formErrorLabelMargin: 0.5em;


/*-------------------
    Labeled inside
--------------------*/
@fieldLabeledInsidePaddingTop: unit(25 / 14, em);

@fieldLabeledInsideLabelColor: @secondaryColor;
@fieldLabeledInsideLabelLineHeight: @inputLineHeight;
@fieldLabeledInsideLabelTop: unit(26 / 14, em);;

@fieldLabeledInsideLabelMarginTop: 0em;
@fieldLabeledInsideLabelMarginRight: 0em;
@fieldLabeledInsideLabelMarginBottom: 0em;
@fieldLabeledInsideLabelMarginLeft: @inputHorizontalPadding;
@fieldLabeledInsideLabelMargin:
    @fieldLabeledInsideLabelMarginTop
    @fieldLabeledInsideLabelMarginRight
    @fieldLabeledInsideLabelMarginBottom
    @fieldLabeledInsideLabelMarginLeft;

@fieldLabeledInsideLabelAwayFontSize: 0.75em;
@fieldLabeledInsideLabelAwayTransform: scale(unit(@fieldLabeledInsideLabelAwayFontSize / @defaultInputFontSize)) translateY(-@inputLineHeight);
@fieldLabeledInsideLabelAwayTransformOrigin: left bottom;

@fieldLabeledInsideLabelTransitionProperty: @defaultTransitionProperty;
@fieldLabeledInsideLabelTransitionDuration: @defaultTransitionDuration;
@fieldLabeledInsideLabelTransitionTimingFunction: @defaultTransitionTimingFunction;
@fieldLabeledInsideLabelTransitionDelay: @defaultTransitionDelay;
@fieldLabeledInsideLabelTransition:
    @fieldLabeledInsideLabelTransitionProperty
    @fieldLabeledInsideLabelTransitionDuration
    @fieldLabeledInsideLabelTransitionTimingFunction
    @fieldLabeledInsideLabelTransitionDelay;


// Large labeled inside

@fieldLargeLabeledInsidePaddingTop: 1.8125em;
@fieldLargeLabeledInsidePaddingRight: 0.9375em;
@fieldLargeLabeledInsidePaddingBottom: 0.5625em;
@fieldLargeLabeledInsidePaddingLeft: 0.9375em;
@fieldLargeLabeledInsidePadding:
    @fieldLargeLabeledInsidePaddingTop
    @fieldLargeLabeledInsidePaddingRight
    @fieldLargeLabeledInsidePaddingBottom
    @fieldLargeLabeledInsidePaddingLeft;

@fieldLargeLabeledInsideLabelFontSize: 1em;
@fieldLargeLabeledInsideLabelLineHeight: @inputLargeLineHeight;
@fieldLargeLabeledInsideLabelTop: 1.875em;

@fieldLargeLabeledInsideLabelMarginTop: 0px;
@fieldLargeLabeledInsideLabelMarginRight: 0px;
@fieldLargeLabeledInsideLabelMarginBottom: 0px;
@fieldLargeLabeledInsideLabelMarginLeft: 1em;
@fieldLargeLabeledInsideLabelMargin:
    @fieldLargeLabeledInsideLabelMarginTop
    @fieldLargeLabeledInsideLabelMarginRight
    @fieldLargeLabeledInsideLabelMarginBottom
    @fieldLargeLabeledInsideLabelMarginLeft;

@fieldLargeLabeledInsideLabelAwayFontSize: 0.875em;
@fieldLargeLabeledInsideLabelAwayTransform:
    scale(unit(@fieldLargeLabeledInsideLabelAwayFontSize / @fieldLargeLabelFontSize))
    translateY(-@inputLargeLineHeight);